<instance format="XCSP3" type="CSP">
  <variables>
    <array id="x" note="x[i] is the target node to which the ith pattern node is mapped" size="[900]"> 0..999 </array>
  </variables>
  <constraints>
    <allDifferent note="ensuring injectivity"> x[] </allDifferent>
    <extension note="preserving edges">
      <list> x[0] x[9] </list>
      <supports> (0,1)(1,0) </supports>
    </extension>
    <group class="redundant-constraints">
      <extension>
        <list> %0 </list>
        <conflicts> 2..999 </conflicts>
      </extension>
      <args> x[0] </args>
      <args> x[9] </args>
    </group>
  </constraints>
</instance>
